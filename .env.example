# PostgreSQL credentials (used by docker-compose and services)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_DB=postgres

# Example DATABASE_URL for local docker-compose setup
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# RabbitMQ credentials (used by docker-compose and services)
RABBIT_USER=guest
RABBIT_PASSWORD=guest
RABBIT_URL=amqp://${RABBIT_USER}:${RABBIT_PASSWORD}@rabbitmq:5672/
# Optional: override API settings
PYTHONUNBUFFERED=1

# Webhook for worker to POST results (circuit breaker enabled)
WEBHOOK_URL=http://localhost:9000/webhook-endpoint

# Dispatcher worker polling interval (seconds)
DISPATCH_INTERVAL=30

# LLM API
LLM_API_KEY=apikey
LLM_BASE_URL=https://api.llm.com
LLM_MODEL=llm-model